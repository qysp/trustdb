{
    "extends": "eslint:recommended",

    "env": {
        "browser": false,
        "commonjs": true,
        "node": true,
        "es6": true
    },

    "parserOptions": {
        "ecmaVersion": 2018
    },

    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "curly": ["error", "all"],
        "no-var": ["error"]
    }
}